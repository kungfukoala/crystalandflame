---
import '../../src/styles/globals.css';
import '@fontsource/libre-baskerville/400.css';
import '@fontsource/libre-baskerville/700.css';
// azeret-mono Supports weights 100-900
import '@fontsource-variable/azeret-mono';
import baskervilleFont400 from '@fontsource/libre-baskerville/files/libre-baskerville-latin-400-normal.woff2?url';
import azeretFont800 from '@fontsource-variable/azeret-mono/files/azeret-mono-latin-wght-normal.woff2?url';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preload" as="font" type="font/woff2" href={baskervilleFont400} crossorigin />
        <link rel="preload" as="font" type="font/woff2" href={azeretFont800} crossorigin />
    </head>
    <body class="antialiased text-white bg-[#111]">
        <div class="flex flex-col min-h-screen px-6 bg-grid-pattern sm:px-12">
            <div class="flex flex-col w-full max-w-3xl mx-auto grow">
                <Header />
                <main class="grow"><slot /></main>
                <Footer />
            </div>
        </div>
    </body>
</html>
