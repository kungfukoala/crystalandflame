---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'About the Project', href: '/' },
    { linkText: 'Support the Project', href: '/support-the-project' },
    { linkText: 'Who We Are', href: '/who-we-are' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="nav flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li class="nav-link">
                        <a href={item.href} class="nav-link inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
